@import "~styles/colors.styl"
.transactions__table
  display flex
  width 100%
  height 100%
  margin-top 30px
  .container-fluid
    min-height 150px
    background #fff
    margin 0 15px
    border-radius 5px
    .row
      margin 0 -30px
  &-item
    display flex
    border-bottom 2px solid #f6f6f6
    padding 15px 20px
    justify-content space-between
    &__date
      display flex
      flex-direction column
      align-items left
      justify-content center
      p
        margin 0px
        padding 2px 0
        font-family Circle55
        color #84888e
    &__info
      align-items center
      font-family Circle55
      p
        padding 2px 0
        margin 0px
        color #84888e
      &-type
        span
          color #009cde
          font-weight bold
      &-wallet
        span
          color #16408f
          font-weight bold
    &__status
      display flex
      align-items center
      font-family Circle55
      .green
        margin 0
        padding 2px 0
        font-family Circle55
        color md-green-500

    &__number
      font-size 2em
      margin 0
      display flex
      align-items center
      font-family Circle55
      span
        padding 0 3px
      .currency
        font-size 0.7em
        position relative
        top 3px

