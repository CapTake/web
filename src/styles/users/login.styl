.auth__form-container
  display flex
  flex-direction column
  padding 0 15px;
  visibility hidden
  opacity 0.01
  max-height 0
  transition: max-height 0ms ease
  &.entered
    visibility visible
    opacity 1
    max-height 400px
    transition: all 1500ms ease
  &__buttons
    margin 15px -15px
    display flex
    &-item
      width 50%
      padding 0 15px
      &__cancel
        width 100%
        display block
        text-align center
        padding 10px 0
        background: #f2f2f2;
        color: #555;
        cursor pointer
        border-radius 2px
      &__authenticate
        width 100%
        display block
        text-align center
        padding 10px 0
