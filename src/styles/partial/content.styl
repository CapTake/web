body
  color: dark-d
  background-color: #fff
  font-weight: 400
  &.expand
    overflow-y: hidden

html, body, button, input, select, textarea
  font-size: 16px
  @media(max-width: width-sm)
    font-size: 14px

h1, h2
  font-weight: 700

h3, h4
  font-weight: 400

h3
  margin-top: 0
  margin-bottom: 1em

h1
  margin-top: 0
  margin-bottom: 1.5rem
  font-size: 2rem
  font-weight: 400
  & + p
    font-size: 1.35rem
    font-weight: 300
    margin-bottom: 2rem

a:not(.button)
  color: dark-d
  &:hover
    text-decoration: underline

.arrow-down
  display: inline-flex
  align-items: center
  padding: 0
  &:after
    content: ''
    width: .5rem
    height: .5rem
    margin-left: 0.75em
    background-image: url(/assets/image/down-arrow.svg)
    background-repeat: no-repeat
    background-size: cover
    transition: all .2s ease

.show, .selected
  .arrow-down:after
    transform: rotateX(-180deg)
