.scrollbar-area
  position: relative
  height: 100%
  &.show,
  &.touched
    .scrollbar-region,
    .scrollbar-thumb
      opacity: 1

.scrollbar-shadow-top,
.scrollbar-shadow-bottom
  content: ''
  position: absolute
  z-index: 5
  left: 0
  right: 0
  height: 2rem
  transition: all 0.2s ease
.scrollbar-shadow-top
  top: 0
.scrollbar-shadow-bottom
  bottom: 0

.scrollbar-content
  width: 100%
  height: 100%
  margin: 0 auto
  overflow: hidden

.scrollbar-box
  user-select: none
  position: absolute
  z-index: 100

.scrollbar-track
  position: relative
  height: 100%

.scrollbar-region
  position: absolute
  top: 0
  right: 0
  width: 100%
  height: 100%
  opacity: 0
  transition: opacity .2s ease
  &.scrollbox-slider
    border-radius: 100px
    background-color: rgba(200,200,200,0.25)

.scrollbar-thumb
  cursor: pointer
  position: relative
  z-index: 1
  width: 6px
  background-color: rgba(200,200,200,0.5)
  border-radius: 100px
  opacity: 0
  transition: opacity .2s ease