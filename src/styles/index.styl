html, body, #root, #root>main
  height: 100%
  background #fff
  font-size 17px
  color #353535
  a
    text-decoration none
a:active, a:hover, a:focus, a:visited
  outline: 0
body
  background: #ffffff;
  color: #353535;
  font-family: Calibri, Arial, sans-serif;
  font-size: 17px;
  font-weight: 400;
  line-height: 24px;
h5
  font-size 1.3em
  color #286c8e
  margin 10px 0
  font-weight 100


img
  -moz-user-select: none;
  -khtml-user-select: none;
  user-select: none;

.wrap-content
  display flex
  flex: 1 0 auto;
  height 100%
  overflow auto
  flex-direction column
  .content
    flex 1 0 auto
    padding: 40px 0
  &__main
    display flex
    flex-direction column
    width 100%
    background #f5f5f5
    &-container
      display: flex;
      padding 0 30px

.users
  display flex
  flex: 1 0 auto;
  height 100%
  overflow auto
  flex-direction column
  w
  .content
    flex 1 0 auto
    display: flex;
    padding: 50px 0;

.footer
  display flex
  justify-content center
  flex-direction column
  align-items center
  min-height 120px
  flex: 0 0 auto;

.default__info
  padding: 15px 35px;
  -webkit-box-shadow: 0 1px 6px 0 rgba(0,0,0,0.12), 0 1px 6px 0 rgba(0,0,0,0.12);
  box-shadow: 0 1px 6px 0 rgba(0,0,0,0.12), 0 1px 6px 0 rgba(0,0,0,0.12);
  position: relative



.activation__sub
  width 100%
  display flex
  height 100%
  justify-content center
  align-items center


input, select
  display: block
  width: 100%
  padding: 0.7rem
  outline none

input, select
  border: 1px solid grey-n
  background-color: #fff
  border-radius: .5rem

label
  user-select: none
  cursor: pointer
  display: flex
  align-items: center
  position: relative
  width: 100%
  text-align: left

input[type="checkbox"]
  display: none
  &:checked + *:before
    transform: translateY(-50%)
  &:checked + *:after
    transform: translateY(-50%) scale(1) rotateZ(-45deg)
    opacity: 1
  & + *
    padding-left: 2rem
    text-align: left
    &:before,
    &:after
      content: ''
      position: absolute
      top: 50%
      left: 0
    &:before
      width: 1rem
      height: 1rem
      border: 1px solid grey-n
      transform: translateY(-50%)
    &:after
      width: .7rem
      height: .35rem
      margin: -.1rem .15rem
      border-left: 3px solid second-n
      border-bottom: 3px solid second-n
      transform: translateY(-50%) scale(0) rotateZ(-45deg)
      opacity: 0
      transition: all .1s ease

button
  background-color: transparent

.button
  display: inline-flex
  align-items: center
  padding: 1rem 1.5rem
  border: 1px solid transparent
  border-radius: .5rem
  transition: all .2s ease

  &-fill
    color: #fff !important
    &.primary
      background-color: primary-n
      &:hover
        background-color: primary-l
    &.second
      background-color: second-n
      &:hover
        background-color: second-d

  &-outline
    background-color: transparent !important
    &.primary
      color: primary-n !important
      border-color: primary-n
    &.second
      color: second-n !important
      border-color: second-n

  &-block
    width: 100%
    justify-content: center

  &.small
    padding: .75rem 1.25rem
  &.large
    padding: 1.25rem 2.5rem

.arrow-down
  display: inline-flex
  align-items: center
  padding: 0
  &:after
    content: "";
    display inline-block
    position relative
    top: -3px;
    right: 0;
    width: 10px;
    height: 4px;
    margin-top: -5px;
    background-image: url('~assets/images/triangle.svg');
    transform: rotate(180deg);

.show, .selected
  .arrow-down:after
    transform: rotateX(-180deg)

.text
  &-left
    text-align left
  &-right
    text-align right

