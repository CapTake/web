input, select
  display: block
  width: 100%
  color: dark-n

input, select
  border: none
  background-color: transparent

label
  user-select: none
  cursor: pointer
  display: flex
  align-items: center
  position: relative
  width: 100%
  text-align: left

input[type="checkbox"]
  display: none
  &:checked + *:before
    transform: translateY(-50%)
  &:checked + *:after
    transform: translateY(-50%) scale(1) rotateZ(-45deg)
    opacity: 1
  & + *
    padding-left: 2rem
    text-align: left
    &:before,
    &:after
      content: ''
      position: absolute
      top: 50%
      left: 0
    &:before
      width: 1rem
      height: 1rem
      border: 1px solid grey-n
      transform: translateY(-50%)
    &:after
      width: .7rem
      height: .35rem
      margin: -.1rem .15rem
      border-left: 3px solid second-n
      border-bottom: 3px solid second-n
      transform: translateY(-50%) scale(0) rotateZ(-45deg)
      opacity: 0
      transition: all .1s ease

.form
  position: relative

  h1
    text-align: center

.form-group
  position: relative
  &:not(:first-of-type)
    margin-top: column-offset * 2

.form-compare
  display: flex
  margin-top: .5rem
  background-color: #fff
  border: 1px solid grey-n
  border-radius: .25rem
  & > *
    width: 100%
    padding: .25rem !important
  & > *:not(:first-child)
    flex: 0 0 auto
    width: auto
    border-left: 1px solid grey-n

.field-error
  margin-bottom: .75em
  font-size: .85em
  color: red-n