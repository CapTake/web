.right-bar
  display flex
  flex-direction column
  &__list
    list-style-type none
    &-item
      font-family Circle55
      font-size 1.3em
      position relative
      &__link
        color #dedfe0
        display block
        line-height 40px
        margin 10px 0
        &:after
          content ''
          background #37bfbd
          height 2px
          position absolute
          transition width 0.5s ease
          top 100%
          right 0
          width 0
      &:hover
        .right-bar__list-item__link
          &:after
            width 100%

      &__link-active
        color #dedfe0
        display block
        line-height 40px
        &:after
          content ''
          background #37bfbd
          height 2px
          position absolute
          transition width 0.5s ease
          top 100%
          right 0px
          width 100%
