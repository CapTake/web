.withdraw
  height 100%
  width 100%
  padding 60px 0
  position relative
  &__container
    &-form
      width 100%
      display flex
      flex-direction column
      margin 0 -15px
      &__item
        display flex
        flex-wrap wrap
        margin-bottom 15px
        padding 0 15px
        &-button, &-error
          display flex
          width 50%
          justify-content center
          padding 0px
          align-items center
        &-button
          &__link
            width 100%
            text-align center
            display block
            background #4d729e
            padding 10px 0
            border-radius 2px
            color #fff
            font-family CircleBold
            cursor pointer
        .half
          width 50%
        .error, success
          justify-content center
          margin auto
          font-family Circle55
        .error
          color md-red-300
        .success
          color md-green-300
