@import '~styles/variables.styl'

@keyframes fx-popup-in
  from
    transform: translateX(-50%) scale(0)
    opacity: 0
  to
    transform: translateX(-50%) scale(1)
    opacity: 1

@keyframes fx-popup-out
  from
    transform: translateX(-50%) scale(1)
    opacity: 1
  to
    transform: translateX(-50%) scale(0)
    opacity: 0

.popup-list
  position: fixed
  z-index: 9999
  top: 0
  left: 0
  display: none
  &.overlay
    display: block
    width: 100%
    height: 100%
    background-color: rgba(0,0,0,0.85)

  .modal-outer
    position: relative

  .modal-window
    position: absolute
    width: calc(100vw - 4rem)
    max-width: 600px
    margin: 2rem 0
    left: 50%
    transform: translateX(-50%)
    background-color: #fff
    box-shadow: 0 1rem 2rem rgba(0,0,0,0.5)
    &-entering
      animation: fx-popup-in .25s
    &-exiting
      animation: fx-popup-out .30s
    &-exited
      transform: translateY(100%)
      opacity: 0

    .header
      position: relative
      padding: 1rem 2rem
      border-bottom: 1px solid primary-n
      h1
        margin: 0
        font-size: 1.5rem

    .content
      padding: 2rem
      .tabs
        margin: -2rem

    .footer
      margin-top: 2rem
      padding: 2rem
      background-color: grey-l